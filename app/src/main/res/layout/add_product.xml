<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#d212100e">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/editTextNameFromNewProductActivtiyPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"


            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:background="#5e6266"
            android:hint="Name" />

        <EditText
            android:id="@+id/editTextPhoneFromRegisterPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"


            android:padding="10dp"
            android:singleLine="true"
            android:background="#5e6266"
            android:hint="Phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTestBloodGroupFromRegisterPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:padding="10dp"
            android:singleLine="true"
            android:background="#5e6266"
            android:hint="Blood Group"
            android:inputType="textAutoComplete|textAutoCorrect|text" />

        <!-- Login Button -->

        <Button
            android:id="@+id/btnRegisterFromRegisterPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="#ea1830"
            android:hint="Register"
            android:text="Register"
            android:textColor="#FFFFFF" />

        <!-- Link to Login Screen -->

        <Button
            android:id="@+id/btnLinkToLoginScreenFromRegisterPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@null"

            android:textSize="15dp"
            android:hint="Already registred! Login Me."
            android:textColor="#fef7ff"
            android:text="Already registred! Login Me."
            android:onClick="linkToGoLoginPageFromRegisterPage" />
    </LinearLayout>

</LinearLayout>